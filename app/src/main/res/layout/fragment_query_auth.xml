<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@color/white_nearby"
              android:divider="@android:drawable/divider_horizontal_bright"
              android:minWidth="300dp"
              android:orientation="vertical"
              android:showDividers="middle">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/fragment_query_auth_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/Material.Standard.Double"
            android:layout_marginTop="@dimen/Material.Standard.Double"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/Material.Standard.Quadruple"
            android:text="权限查询"
            android:textColor="@color/text_primary_dark"
            android:textSize="@dimen/TextSize.Material.Title"
            android:textStyle="bold"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="112dp"
            android:gravity="center"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/fragment_query_auth_user_label"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/Material.Standard.Quadruple"
                android:text="账号"
                android:textColor="@color/text_primary_dark"/>

            <EditText
                android:id="@+id/fragment_query_auth_user_no"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_toRightOf="@id/fragment_query_auth_user_label"
                android:layout_marginLeft="@dimen/Material.Standard.Quadruple"
                android:layout_marginRight="@dimen/Material.Standard.Quadruple"
                android:hint="请输入账号"
                android:imeOptions="flagNoExtractUi"
                android:inputType="number"
                android:maxLines="1"
                android:textColor="@color/text_blue"
                />

            <TextView
                android:id="@+id/fragment_query_auth_password_label"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_below="@id/fragment_query_auth_user_label"
                android:paddingLeft="@dimen/Material.Standard.Quadruple"
                android:gravity="center_vertical"
                android:text="密码"
                android:textColor="@color/text_primary_dark"
                />

            <EditText
                android:id="@+id/fragment_query_auth_password"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@id/fragment_query_auth_user_label"
                android:layout_toRightOf="@id/fragment_query_auth_password_label"
                android:layout_marginLeft="@dimen/Material.Standard.Quadruple"
                android:layout_marginRight="@dimen/Material.Standard.Quadruple"
                android:hint="请输入密码"
                android:imeOptions="flagNoExtractUi|actionDone"
                android:inputType="numberPassword"
                android:maxLines="1"
                android:textColor="@color/text_blue"
                />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@android:drawable/divider_horizontal_bright"
        android:orientation="horizontal"
        android:showDividers="middle">

        <Button
            android:id="@+id/fragment_query_card_cancel_btn"
            style="@android:style/Widget.Holo.Light.Button.Borderless.Small"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="取消"
            android:textColor="@color/text_secondary_dark"/>

        <Button
            android:id="@+id/fragment_query_card_ok_btn"
            style="@android:style/Widget.Holo.Light.Button.Borderless.Small"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="确定"
            android:textColor="@color/text_blue"/>
    </LinearLayout>

</LinearLayout>