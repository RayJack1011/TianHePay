<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center">

    <RelativeLayout
        android:id="@+id/fragment_welcome_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-58dp"
        android:gravity="center"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/fragment_welcome_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_icon"
            />

        <TextView
            android:id="@+id/fragment_welcome_app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/fragment_welcome_icon"
            android:layout_marginTop="@dimen/Material.Standard"
            android:layout_marginLeft="@dimen/Material.Standard"
            android:text="@string/welcome_app_name"
            android:textColor="@color/text_primary_dark"
            android:textSize="@dimen/TextSize.Material.Headline"
            />

        <TextView
            android:id="@+id/fragment_welcome_app_name_en"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/fragment_welcome_app_name"
            android:layout_below="@id/fragment_welcome_app_name"
            android:text="@string/welcome_app_name_en"
            android:textColor="@color/text_secondary_dark"
            />
    </RelativeLayout>
</LinearLayout>