<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="@drawable/bg_transparent_selector"
    card_view:cardBackgroundColor="@color/white_nearby">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/item_refund_paid_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/Material.Standard.Double"
            android:src="@drawable/ic_coupon"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/item_refund_paid_name_and_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/item_refund_paid_icon"
            android:layout_centerVertical="true"
            android:textSize="@dimen/TextSize.Material.Title"
            android:text="现金支付"/>

        <ImageButton
            android:id="@+id/item_refund_paid_enable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_refundable"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/Material.Standard.Quadruple"
            android:visibility="gone"
            />
        <ImageView
            android:id="@+id/item_refund_paid_unable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_refund_unable"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/Material.Standard.Quadruple"
            android:visibility="gone"
            />
    </RelativeLayout>

</android.support.v7.widget.CardView>