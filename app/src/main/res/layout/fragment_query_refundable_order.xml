<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:divider="@android:drawable/divider_horizontal_bright"
              android:minWidth="400dp"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/fragment_query_refundable_order_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/Material.Standard.Quadruple"
        android:layout_marginTop="@dimen/Material.Standard.Quadruple"
        android:gravity="center"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/Material.Standard.Quadruple"
            android:text="单号"
            android:textColor="@color/text_primary_dark"/>

        <EditText
            android:id="@+id/fragment_query_refundable_order_input"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="@dimen/Material.Standard.Quadruple"
            android:layout_marginRight="@dimen/Material.Standard.Quadruple"
            android:hint="请输入交易单号"
            android:imeOptions="flagNoExtractUi|actionDone"
            android:inputType="number"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="@dimen/Material.Standard.Double"
        android:layout_marginRight="@dimen/Material.Standard.Double"
        android:layout_marginTop="10dp"
        android:background="#33666666"
        />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/Material.Standard.Quadruple"
        android:layout_marginRight="@dimen/Material.Standard.Quadruple"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/fragment_query_refundable_order_query_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:gravity="center"
            android:minHeight="@dimen/button_height_min"
            android:minWidth="@dimen/Material.Standard.Octuple"
            android:text="查询"
            android:textColor="@color/text_blue"
            android:textSize="@dimen/TextSize.Material.Title"
            />
    </android.support.v7.widget.CardView>

</LinearLayout>