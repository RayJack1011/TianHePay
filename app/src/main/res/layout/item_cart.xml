<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_cart_item_container"
    android:layout_width="match_parent"
    android:layout_height="121dp"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/view_cart_item_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_cart_item"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/view_cart_item_desc_layout"
            android:layout_width="wrap_content"
            android:layout_height="110dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/Material.Standard.Double"
            android:layout_toRightOf="@id/view_cart_item_icon"
            android:orientation="vertical">

            <TextView
                android:id="@+id/view_cart_item_name"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="5dp"
                android:layout_weight="2"
                android:text="女鞋"
                android:textColor="@color/text_primary_dark"
                android:textSize="@dimen/TextSize.Material.Headline" />

            <TextView
                android:id="@+id/view_cart_item_number"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:maxLines="1"
                android:gravity="center_vertical"
                android:text="12444444444"
                android:textColor="@color/text_primary_dark"
                android:textSize="@dimen/TextSize.Material.Body" />

            <TextView
                android:id="@+id/view_cart_item_quantity"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="数量: 1"
                android:textColor="@color/text_secondary_dark" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/view_cart_item_modify_container"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:gravity="center_vertical|right"
            android:orientation="vertical">

            <TextView
                android:id="@+id/view_cart_item_oldprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/Material.Standard.Double"
                android:layout_marginTop="@dimen/Material.Standard"
                android:gravity="center"
                android:text="20.12"
                android:textColor="@color/text_primary_dark"
                android:textSize="@dimen/TextSize.Material.Body"
                android:visibility="gone" />

            <TextView
                android:id="@+id/view_cart_item_price"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_alignParentRight="true"
                android:layout_below="@id/view_cart_item_oldprice"
                android:layout_marginRight="@dimen/Material.Standard.Double"
                android:layout_marginTop="@dimen/Material.Standard"
                android:layout_weight="1"
                android:gravity="center"
                android:text="单价:20.12"
                android:visibility="gone"
                android:textColor="@color/text_primary_dark"
                android:textSize="@dimen/TextSize.Material.Body" />

            <TextView
                android:id="@+id/view_cart_item_discount"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_alignParentRight="true"
                android:layout_below="@id/view_cart_item_price"
                android:layout_marginRight="@dimen/Material.Standard.Double"
                android:layout_marginTop="@dimen/Material.Standard"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="折扣: 9.66"
                android:textColor="@color/text_blue" />

            <TextView
                android:id="@+id/view_cart_item_price_momney"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_alignParentRight="true"
                android:layout_below="@id/view_cart_item_oldprice"
                android:layout_marginRight="@dimen/Material.Standard.Double"
                android:layout_marginTop="@dimen/Material.Standard"
                android:layout_weight="1"
                android:gravity="center"
                android:text="实收:0.00"
                android:textColor="#e21616"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_margin="@dimen/Material.Standard"
                android:src="@drawable/bg_cart_item_menu"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray"/>
</LinearLayout>