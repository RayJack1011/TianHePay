<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <TextView
            android:id="@+id/print_shop_name_prompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商户名称:"
            android:textColor="@color/text_primary_dark" />

        <TextView
            android:id="@+id/print_shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text=""
            android:textColor="@color/text_primary_dark" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

        <TextView
            android:id="@+id/print_store_name_prompt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="门店编号:"
            android:textColor="@color/text_primary_dark"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/print_store_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="@color/text_primary_dark"
            android:textSize="14sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <TextView
            android:id="@+id/print_mch_id_prompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商户编号:"
            android:textColor="@color/text_primary_dark"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/print_mch_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text=""
            android:textColor="@color/text_primary_dark"
            android:textSize="14sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="8dp"
        android:background="#c2bcbc" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

        <TextView
            android:id="@+id/print_pos_no_prompt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="终端编号:"
            android:textColor="@color/text_primary_dark" />

        <TextView
            android:id="@+id/print_pos_no"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="@color/text_primary_dark" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="8dp"
        android:background="#c2bcbc" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

        <TextView
            android:id="@+id/print_user_no_prompt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="操作员号:"
            android:textColor="@color/text_primary_dark" />

        <TextView
            android:id="@+id/print_user_no"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="@color/text_primary_dark" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="15px"
        android:background="#f5eeee" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

        <TextView
            android:id="@+id/print_trade_type_prompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/Material.Standard.Double"
            android:paddingTop="@dimen/Material.Standard.Double"
            android:text="交易状态:"
            android:textColor="@color/text_primary_dark" />

        <TextView
            android:id="@+id/print_trade_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="消费"
            android:textColor="@color/text_blue"
            android:textSize="@dimen/TextSize.Material.Headline" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="8dp"
        android:background="#c2bcbc" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

        <TextView
            android:id="@+id/print_datetime_prompt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="日期/时间:"
            android:textColor="@color/text_primary_dark" />

        <TextView
            android:id="@+id/print_datetime"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="@color/text_primary_dark" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="8dp"
        android:background="#c2bcbc" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

        <TextView
            android:id="@+id/print_thirdparty_no_prompt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="参考号:"
            android:textColor="@color/text_primary_dark" />
    </RelativeLayout>

    <TextView
        android:id="@+id/print_thirdparty_no"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical|right"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:textColor="@color/text_primary_dark" />

    <View
        android:layout_width="match_parent"
        android:layout_height="15px"
        android:background="#f5eeee" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

        <TextView
            android:id="@+id/print_amount_prompt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="金额:"
            android:textColor="@color/text_primary_dark" />

        <TextView
            android:id="@+id/print_amount"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:paddingRight="@dimen/Material.Standard"
            android:text=""
            android:textColor="#e24639"
            android:textSize="16sp" />
    </RelativeLayout>

</LinearLayout>