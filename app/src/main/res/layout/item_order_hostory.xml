<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp">

    <TextView
        android:id="@+id/view_order_item_orderId"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginLeft="16dp"
        android:paddingTop="8dp"
        android:text="单号: 0198477399199191"
        android:textColor="@color/text_primary_dark"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/view_order_item_order_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_order_item_orderId"
        android:layout_margin="16dp"
        android:text="时间：2017-01-12 15:00:51"
        android:textSize="12sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/view_order_item_total"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/view_order_item_orderId"
        android:layout_marginLeft="16dp"
        android:paddingTop="5dp"
        android:text="订单总额: 127.00"
        android:textColor="@color/text_primary_dark"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/view_order_item_discount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/view_order_item_total"
        android:layout_marginRight="25dp"
        android:background="@null"
        android:gravity="center"
        android:text="折扣：－0.01"
        android:visibility="gone" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="4dp"
        android:layout_alignParentBottom="true"
        android:background="@color/gray" />

</RelativeLayout>