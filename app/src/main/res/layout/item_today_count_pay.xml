<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
    >
    <TextView
        android:id="@+id/item_today_count_pay_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingTop="@dimen/Material.Standard"
        android:paddingBottom="@dimen/Material.Standard"
        android:text="微信"
        android:textColor="@color/text_primary_dark"
        android:textSize="@dimen/TextSize.Material.Body"
        />
    <TextView
        android:id="@+id/item_today_count_pay_total"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="29.90"
        android:textColor="@color/text_primary_dark"
        android:textSize="@dimen/TextSize.Material.Body"
        />

    <TextView
        android:id="@+id/item_today_count_refund_total"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingTop="@dimen/Material.Standard"
        android:text="29.90"
        android:textColor="@color/text_primary_dark"
        android:textSize="@dimen/TextSize.Material.Body"
        />

    <TextView
        android:id="@+id/item_today_count_pay_count"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingTop="@dimen/Material.Standard"
        android:text="29.90"
        android:textColor="@color/text_primary_dark"
        android:textSize="@dimen/TextSize.Material.Body"
        />
</LinearLayout>